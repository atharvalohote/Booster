{
  "manifest_version": 3,
  "name": "Booster",
  "description": "Automatically speeds up YouTube ads and Coursera videos, and skips ads instantly.",
  "version": "2.0",
  "author": "Atharva Lohote",
  "permissions": [
    "storage",
    "scripting"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.coursera.org/*"
      ],
      "js": ["scripts/content.js"],
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon128.png"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}